{
    "name": "meme-tools",
    "version": "1.0.0",
    "description": "Meme Tools",
    "scripts": {
        "prepare": "husky && yarn setenv:dev",
        "setenv:dev": "yarn config set initFields --home --json '{\"meme-tools\": {\"env\": \"development\"}}'",
        "setenv:test": "yarn config set initFields --home --json '{\"meme-tools\": {\"env\": \"test\"}}'",
        "setenv:prod": "yarn config set initFields --home --json '{\"meme-tools\": {\"env\": \"production\"}}'",
        "getenv": "yarn config get 'initFields[\"meme-tools\"].env'",
        "format": "prettier --check .",
        "format:fix": "prettier --write .",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "test": "yarn setenv:test && yarn start && yarn add-raydium-pool-liquidity && yarn trade-raydium-pool && yarn finish && yarn setenv:dev",
        "start": "yarn get-config && yarn cleanup && yarn distribute-funds && yarn create-mint && yarn open-raydium-pool && yarn get-raydium-pool && yarn get-funds:main",
        "finish": "yarn close-raydium-pool && yarn collect-funds && yarn remove-raydium-pool-liquidity && yarn get-funds",
        "cleanup": "NODE_ENV=$(yarn getenv) ts-node -r ./src/init.ts src/tasks/cleanup.ts",
        "distribute-funds": "NODE_ENV=$(yarn getenv) ts-node -r ./src/init.ts src/tasks/distribute-funds.ts",
        "distribute-funds:replay": "NODE_ENV=$(yarn getenv) LOGGER_NAME=distribute-funds ts-node -r ./src/init.ts src/tasks/replay-logs.ts",
        "distribute-funds:dry-run": "NODE_ENV=$(yarn getenv) ts-node -r ./src/init.ts src/tasks/distribute-funds.ts --dry-run",
        "create-mint": "NODE_ENV=$(yarn getenv) ts-node -r ./src/init.ts src/tasks/create-mint.ts",
        "create-mint:replay": "NODE_ENV=$(yarn getenv) LOGGER_NAME=create-mint ts-node -r ./src/init.ts src/tasks/replay-logs.ts",
        "open-raydium-pool": "NODE_ENV=$(yarn getenv) ts-node -r ./src/init.ts src/tasks/open-raydium-pool.ts",
        "open-raydium-pool:replay": "NODE_ENV=$(yarn getenv) LOGGER_NAME=open-raydium-pool ts-node -r ./src/init.ts src/tasks/replay-logs.ts",
        "add-raydium-pool-liquidity": "NODE_ENV=$(yarn getenv) ts-node -r ./src/init.ts src/tasks/add-raydium-pool-liquidity.ts",
        "add-raydium-pool-liquidity:replay": "NODE_ENV=$(yarn getenv) LOGGER_NAME=add-raydium-pool-liquidity ts-node -r ./src/init.ts src/tasks/replay-logs.ts",
        "remove-raydium-pool-liquidity": "NODE_ENV=$(yarn getenv) ts-node -r ./src/init.ts src/tasks/remove-raydium-pool-liquidity.ts",
        "remove-raydium-pool-liquidity:replay": "NODE_ENV=$(yarn getenv) LOGGER_NAME=remove-raydium-pool-liquidity ts-node -r ./src/init.ts src/tasks/replay-logs.ts",
        "burn-raydium-pool-liquidity": "NODE_ENV=$(yarn getenv) ts-node -r ./src/init.ts src/tasks/burn-raydium-pool-liquidity.ts",
        "burn-raydium-pool-liquidity:replay": "NODE_ENV=$(yarn getenv) LOGGER_NAME=burn-raydium-pool-liquidity ts-node -r ./src/init.ts src/tasks/replay-logs.ts",
        "lock-raydium-pool-liquidity": "NODE_ENV=$(yarn getenv) ts-node -r ./src/init.ts src/tasks/lock-raydium-pool-liquidity.ts",
        "lock-raydium-pool-liquidity:replay": "NODE_ENV=$(yarn getenv) LOGGER_NAME=lock-raydium-pool-liquidity ts-node -r ./src/init.ts src/tasks/replay-logs.ts",
        "trade-raydium-pool": "NODE_ENV=$(yarn getenv) ts-node -r ./src/init.ts src/tasks/trade-raydium-pool.ts",
        "trade-raydium-pool:replay": "NODE_ENV=$(yarn getenv) LOGGER_NAME=trade-raydium-pool ts-node -r ./src/init.ts src/tasks/replay-logs.ts",
        "close-raydium-pool": "NODE_ENV=$(yarn getenv) ts-node -r ./src/init.ts src/tasks/close-raydium-pool.ts",
        "close-raydium-pool:replay": "NODE_ENV=$(yarn getenv) LOGGER_NAME=close-raydium-pool ts-node -r ./src/init.ts src/tasks/replay-logs.ts",
        "collect-raydium-pool-fees": "NODE_ENV=$(yarn getenv) ts-node -r ./src/init.ts src/tasks/collect-raydium-pool-fees.ts",
        "collect-raydium-pool-fees:replay": "NODE_ENV=$(yarn getenv) LOGGER_NAME=collect-raydium-pool-fees ts-node -r ./src/init.ts src/tasks/replay-logs.ts",
        "collect-funds": "NODE_ENV=$(yarn getenv) ts-node -r ./src/init.ts src/tasks/collect-funds.ts",
        "collect-funds:replay": "NODE_ENV=$(yarn getenv) LOGGER_NAME=collect-funds ts-node -r ./src/init.ts src/tasks/replay-logs.ts",
        "get-config": "NODE_ENV=$(yarn getenv) ts-node -r ./src/init.ts src/tasks/get-config.ts",
        "get-accounts": "NODE_ENV=$(yarn getenv) ts-node -r ./src/init.ts src/tasks/get-accounts.ts",
        "get-accounts:main": "NODE_ENV=$(yarn getenv) ts-node -r ./src/init.ts src/tasks/get-accounts.ts --mode main",
        "get-accounts:sniper": "NODE_ENV=$(yarn getenv) ts-node -r ./src/init.ts src/tasks/get-accounts.ts --mode sniper",
        "get-accounts:trader": "NODE_ENV=$(yarn getenv) ts-node -r ./src/init.ts src/tasks/get-accounts.ts --mode trader",
        "get-funds": "NODE_ENV=$(yarn getenv) ts-node -r ./src/init.ts src/tasks/get-funds.ts",
        "get-funds:main": "NODE_ENV=$(yarn getenv) ts-node -r ./src/init.ts src/tasks/get-funds.ts --mode main",
        "get-funds:sniper": "NODE_ENV=$(yarn getenv) ts-node -r ./src/init.ts src/tasks/get-funds.ts --mode sniper",
        "get-funds:trader": "NODE_ENV=$(yarn getenv) ts-node -r ./src/init.ts src/tasks/get-funds.ts --mode trader",
        "get-mint": "NODE_ENV=$(yarn getenv) ts-node -r ./src/init.ts src/tasks/get-mint.ts",
        "get-raydium-pool": "NODE_ENV=$(yarn getenv) ts-node -r ./src/init.ts src/tasks/get-raydium-pool.ts",
        "generate-encryption-secret": "hexdump -vn16 -e'4/4 \"%08x\" 1 \"\n\"' /dev/urandom",
        "generate-shares": "NODE_ENV=$(yarn getenv) ts-node -r ./src/init.ts src/tasks/generate-shares.ts --count 42 --sum 50 --deviation 31",
        "grind-keypairs": "yarn grind-keypair:dev && yarn grind-keypair:dsn && yarn grind-keypair:dtr",
        "grind-keypair:dev": "NODE_ENV=$(yarn getenv) ts-node -r ./src/init.ts src/tasks/grind-keypair.ts --prefix De --postfix V",
        "grind-keypair:dsn": "NODE_ENV=$(yarn getenv) ts-node -r ./src/init.ts src/tasks/grind-keypair.ts --prefix Ds --postfix N",
        "grind-keypair:dtr": "NODE_ENV=$(yarn getenv) ts-node -r ./src/init.ts src/tasks/grind-keypair.ts --prefix Dt --postfix R",
        "rename-token-files": "NODE_ENV=$(yarn getenv) ts-node -r ./src/init.ts src/tasks/rename-token-files.ts"
    },
    "keywords": [],
    "author": "EverCoinX <2901744+evercoinx@users.noreply.github.com>",
    "license": "UNLICENSED",
    "private": true,
    "type": "commonjs",
    "engines": {
        "node": ">=22"
    },
    "packageManager": "yarn@4.7.0",
    "dependencies": {
        "@raydium-io/raydium-sdk-v2": "^0.1.118-alpha",
        "@solana/spl-token": "^0.4.13",
        "@solana/web3.js": "^1.98.0",
        "arweave": "^1.15.5",
        "bs58": "^6.0.0",
        "chalk": "^5.4.1",
        "decimal.js": "^10.5.0",
        "dotenv": "^16.4.7",
        "fastestsmallesttextencoderdecoder": "^1.0.22",
        "flat-cache": "^6.1.7",
        "got": "^11.8.6",
        "helius-sdk": "^1.4.2",
        "image-size": "^2.0.1",
        "pinata-web3": "^0.5.4",
        "pino": "^9.6.0",
        "pino-pretty": "^13.0.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.23.0",
        "@tsconfig/node20": "^20.1.4",
        "@types/big.js": "^6.2.2",
        "@types/bn.js": "^5.1.6",
        "@types/decimal.js": "^7.4.3",
        "@types/minimist": "^1.2.5",
        "@types/node": "^22.13.11",
        "eslint": "^9.23.0",
        "eslint-config-prettier": "^10.1.1",
        "eslint-plugin-prettier": "^5.2.3",
        "husky": "^9.1.7",
        "joi": "^17.13.3",
        "prettier": "^3.5.3",
        "source-map-support": "^0.5.21",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.27.0"
    }
}
